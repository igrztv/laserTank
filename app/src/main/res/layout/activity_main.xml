<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.morgan.lasertang.MainActivity">

    <ImageView
        android:layout_width="500px"
        android:layout_height="500px"
        android:id="@+id/moveBtnSpace"
        android:src="@drawable/joystick_space"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="138dp"
        android:layout_marginEnd="138dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shoot_btn"
        android:text="@string/shoot_btn"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_alignBottom="@+id/move_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/move_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView2"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/move_btn"
        android:adjustViewBounds="false"
        android:background="@null"
        android:src="@drawable/joystick2"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/moveBtnSpace"
        android:layout_alignEnd="@+id/moveBtnSpace"
        android:layout_marginRight="88dp"
        android:layout_marginEnd="88dp" />

    <ZoomButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/turretRight"
        android:src="@drawable/turret_right"
        android:layout_alignTop="@+id/turretLeft"
        android:layout_toRightOf="@+id/turretLeft"
        android:layout_toEndOf="@+id/turretLeft" />

    <ZoomButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/turretLeft"
        android:src="@drawable/turret_left"
        android:layout_above="@+id/shoot_btn"
        android:layout_alignLeft="@+id/shoot_btn"
        android:layout_alignStart="@+id/shoot_btn"
        android:layout_marginTop="200px" />

</RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.morgan.lasertang.SearchActivity"
    android:background="#FFF">

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="@android:dimen/thumbnail_height"
            android:id="@+id/deviceList"
            android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView2"
        android:layout_above="@+id/btnSearch" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="поиск"
            android:background="@drawable/big_button_selector"
            android:id="@+id/btnSearch"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/imageView2"
            android:scaleType="centerCrop"
            android:background="@color/base_layout_color"
            android:src="@drawable/unknown"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ProgSearch"
            android:progress="50"
            android:secondaryProgress="30"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            android:indeterminateDuration="2000"
            android:indeterminateOnly="true"
            android:indeterminateTint="#26d52c"
            android:visibility="invisible"
            android:layout_above="@+id/deviceList"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%USERNAME%"
            android:id="@+id/textUsername"
            android:shadowColor="#FFF"
            android:shadowDx="2.2"
            android:shadowDy="2.2"
            android:shadowRadius="2.2"
            android:layout_marginBottom="10dp"
            android:textSize="32sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

    <!-- The navigation drawer
    <include layout="@layout/navigation"/>-->

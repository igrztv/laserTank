<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/base_layout_color</item>
        <item name="colorPrimaryDark">@color/base_layout_color_dark</item>
        <item name="colorAccent">@color/base_layout_color_accent</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialTheme" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/base_layout_color</item>
        <item name="android:colorPrimaryDark">@color/base_layout_color_dark</item>
        <item name="android:colorAccent">@color/base_layout_color_accent</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

    </style>

    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/action_bar_text_color</item>
    </style>
</resources>
